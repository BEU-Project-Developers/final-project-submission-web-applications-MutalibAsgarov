@model Guarder.Models.Order
@{
    ViewData["Title"] = "Sifarişi Redaktə Et";
}
<section class="contact_section layout_padding">
    <div class="container">
        <div class="heading_container heading_center">
            <h2>Sifarişi Redaktə Et</h2>
        </div>
        <div class="row">
            <div class="col-md-7 mx-auto">
                <form asp-action="Edit" method="post">
                    <input type="hidden" name="Id" value="@Model.Id" />
                    <div class="contact_form-container">
                        <div>
                            <div>
                                <input type="text" name="Details" value="@Model.Details" placeholder="Ətraflı məlumat" required />
                            </div>
                            <div>
                                <input type="number" name="ServiceId" value="@Model.ServiceId" placeholder="Xidmət ID" required />
                            </div>
                            <div>
                                <input type="text" name="Status" value="@Model.Status" placeholder="Status" required />
                            </div>
                            <div class="btn-box">
                                <button type="submit">Yadda saxla</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
