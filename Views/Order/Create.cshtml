@model Guarder.Models.Order
@{
    ViewData["Title"] = "Yeni Sifariş";
}
<section class="contact_section layout_padding">
    <div class="container">
        <div class="heading_container heading_center">
            <h2>Yeni Sifariş</h2>
        </div>
        <div class="row">
            <div class="col-md-7 mx-auto">
                <form asp-action="Create" method="post">
                    <div class="contact_form-container">
                        <div>
                            <div>
                                <input type="text" name="Details" placeholder="Ətraflı məlumat" required />
                            </div>
                            <div>
                                <input type="number" name="ServiceId" placeholder="Xidmət ID" required />
                            </div>
                            <div class="btn-box">
                                <button type="submit">Sifariş et</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
